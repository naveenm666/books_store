<%= form_with model: supplier do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% supplier.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>